{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "serve": {
      "cache": false,
      "persistent": true,
      "env": [
        "SENTRY_DSN",
        "ACCESS_TOKEN_SECRET",
        "REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_EXPIRATION_MINUTES",
        "JWT_REFRESH_EXPIRATION_DAYS",
        "RESET_PASSWORD_EXPIRATION_MINUTES",
        "VERIFY_EMAIL_EXPIRATION_MINUTES",
        "FILE_UPLOAD_EXPIRATION_MINUTES",
        "EMAIL_API_TOKEN",
        "WITH_EMAIL_SERVICE",
        "CONTACT_EMAIL",
        "REGISTER_ACCESS_CODES"
      ]
    },
    "build": {
      "env": [
        "SENTRY_DSN",
        "ACCESS_TOKEN_SECRET",
        "REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_EXPIRATION_MINUTES",
        "JWT_REFRESH_EXPIRATION_DAYS",
        "RESET_PASSWORD_EXPIRATION_MINUTES",
        "VERIFY_EMAIL_EXPIRATION_MINUTES",
        "FILE_UPLOAD_EXPIRATION_MINUTES",
        "EMAIL_API_TOKEN",
        "WITH_EMAIL_SERVICE",
        "CONTACT_EMAIL",
        "REGISTER_ACCESS_CODES"
      ]
    },
    "prepare:docker:build": {
      "cache": false,
      "persistent": false,
      "outputs": ["../../out_sync_server"]
    },
    "docker:build": {
      "dependsOn": ["prepare:docker:build"],
      "cache": false
    }
  }
}
